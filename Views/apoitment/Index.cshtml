@model IEnumerable<Hospital.Scheduler>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <form method="post">
        @{
            var items = Model;
            var doctors = ViewBag.doctors;
            var methodName = ViewBag.current;
            var doctorName = ViewBag.doctorName;
        }
        <p>
            <label for="sortMethod">choose Sort method</label>
            <select name="sortMethod">
                <option selected hidden>Sort table</option>
                <option value="Standart">Standart</option>
                <option value="StandartTurnOver">StandartTurnOver</option>
                <option value="DateTop">DateTop</option>
                <option value="DateDown">DateDown</option>
                <option value="Free">Free</option>
                <option value="Booked">Booked</option>
            </select>
        </p>

        <p>
            <label for="doctorName">choose some doctor</label>
            <select name="DoctorId">
                <option selected hidden>Sort table</option>
                <option value=-1>see all doctors</option>
                @if (doctors != null)
                {
                    foreach (var doctor in doctors)
                    {
                        <option value=@doctor.Id>@doctor.DoctopName</option>
                    }
                }
            </select>
        </p>

        <h3>@methodName</h3>
        <h3>@doctorName</h3>
        <p>
            <input type="submit" value="Sort" />
        </p>
    </form>

    <table class="table">
        @Html.ActionLink("Add new time", "Create", new { })
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.timeOfReception)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor.DoctopName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient.PatienName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.timeOfReception)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.DoctopName)
                </td>
                <td>
                    @if (item.Patient != null)
                    {
                        @Html.DisplayFor(modelItem => item.Patient.PatienName)
                    }
                    else
                    {
                        @Html.ActionLink("BOOK", "Edit", new { id = item.Id })
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
                <td>
                    @if (item.Patient != null)
                    {
                        @Html.ActionLink("Write result", "WriteResult", new { id = item.Id })
                    }
                </td>
            </tr>
        }

    </table>
}
